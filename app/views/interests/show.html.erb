        var JSONObject=  {
             importance: {
                      guest_id: "1",
                      interest_id: "1",
                      importance: "50"
            }
        };
    $.ajax({
            type: "POST",
            url : "http://localhost:3000/importances",
            cache: false,
            processData: true,
            dataType: "json",
            data: JSONObject,
             statusCode: {

                 200:function() { alert("200"); },
                 202:function() { alert("202"); }
            },
            success: function() {  alert("Data Send!");},
            error: function(xhr){console.log(xhr);}
        });
    });
</script>
